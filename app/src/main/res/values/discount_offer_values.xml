<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="button_frame_padding">8dp</dimen>
    <dimen name="discount_icon_size">32dp</dimen>
    <dimen name="top_header_height">130dp</dimen>

    <dimen name="detail_view_side_padding">10dp</dimen>


    <!-- Colors -->

    <color name="seniors_card_blue">#104a7c</color>
    <color name="seniors_card_blue_overlay">#A0104a7c</color>
    <color name="seniors_card_brown">#a8996e</color>
    <color name="seniors_card_brown_bg">#eddca6</color>

    <color name="seniors_card_text_white">#FFffffff</color>
    <color name="seniors_card_text_grey">#FFDDDDDD</color>

    <color name="map_overlay_bg">#CC888888</color>
    <color name="map_overlay_bg_pressed">#CC666666</color>


    <color name="text_shadow_color">#AA000000</color>


    <!-- Styles -->
    <style name="HeaderText">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:shadowColor">@color/text_shadow_color</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/seniors_card_text_white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Outer container for button -->
    <style name="ButtonContainer">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/button_material_blue_states</item>
        <item name="android:padding">@dimen/button_frame_padding</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- TextView for button -->
    <style name="ButtonTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>