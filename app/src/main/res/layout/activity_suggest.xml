<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.yourservices.ui.SuggestActivity"
    android:background="@color/seniors_card_brown_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <!-- Business name -->
        <TextView
            android:text="Business Name"
            style="@style/SuggestLabel" />

        <EditText
            android:id="@+id/business_name"
            style="@style/SuggestEditText" />

        <!-- Business address -->
        <TextView
            android:text="Business Location"
            style="@style/SuggestLabel" />

        <EditText
            android:id="@+id/address"
            style="@style/SuggestEditText" />

        <!-- Services -->
        <TextView
            android:text="What services would you like made available?"
            style="@style/SuggestLabel" />

        <EditText
            android:id="@+id/services"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:singleLine="false"
            android:gravity="top|left"
            style="@style/SuggestEditText" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit_btn"
            android:text="Submit"
            android:background="@color/seniors_card_blue"
            android:padding="16dp"
            android:gravity="center" />
    </LinearLayout>

</ScrollView>
